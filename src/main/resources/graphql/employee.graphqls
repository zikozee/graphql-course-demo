type Employee implements Person {
    uuid: String!
    name: String!
    dateOfBirth: Date!
    gender: Gender!
    salary: BigDecimal!
    address: [Address!]
    age: PositiveInt!
    phone: PositiveInt
    companyName: String!
    active: Boolean!

    employeeId: String!
    departmentNo: PositiveInt!,
    email: String!
    role: Role
}


enum Gender {
    MALE, FEMALE
}

enum Role {
    INTERN, SUPERVISOR, MANAGER, GMD
}

input EmployeeInput {

    name: String!
    dateOfBirth: Date!
    gender: Gender!
    salary: BigDecimal!
    address: [AddressInput!]
    age: PositiveInt!
    phone: PositiveInt

    employeeId: String!
    departmentNo: PositiveInt!,
    email: String!
    role: Role
}

input EmployeeUpdateInput {
    employeeId: String!,
    salary: BigDecimal!,
    age: PositiveInt!
    role: Role
}